  <div class="create-form">
    <h4>Title</h4>
    <%= f.text_field :title %>
  </div>

  <div class="create-form">
    <h4>Body</h4>
    <%= f.text_area :body %>
  </div>

  <%= f.submit "Create Book" %>

  <% end %>